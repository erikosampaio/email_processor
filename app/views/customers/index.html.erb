<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Customers</h2>
      <span class="badge bg-primary fs-6">Total: <%= @customers.count %></span>
    </div>
    
    <% if @customers.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Telefone</th>
              <th>Código do Produto</th>
              <th>Assunto</th>
              <th>Data de Criação</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><span class="badge bg-info"><%= customer.product_code %></span></td>
                <td><%= truncate(customer.subject, length: 50) %></td>
                <td><%= customer.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                <td>
                  <%= link_to "Ver", customer_path(customer), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Nenhum customer encontrado</h5>
            <p class="card-text">Faça upload de arquivos .eml para processar e criar customers.</p>
            <%= link_to "Fazer Upload", root_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
